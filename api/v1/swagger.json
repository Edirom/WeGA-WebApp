{
    "swagger": "2.0",
    "info": {
        "title": "WeGA API",
        "description": "The API doumentation for the Carl-Maria-von-Weber-Gesamtausgabe",
        "version": "1.0.0"
    },
    "host": "localhost:8080",
    "schemes": [
        "http"
    ],
    "tags": [
        {
            "name": "Ant",
            "description": "Functions needed for various ANT tasks for updating and deleting database records.\nThis is only available in the development version."
        },
        {
            "name": "Documents",
            "description": "Access to the documents of the WeGA digital edition"
        },
        {
            "name": "Facets",
            "description": "Facets available for several collections of documents"
        }
    ],
    "basePath": "/exist/apps/WeGA-WebApp/api/v1",
    "paths": {
        "/documents": {
            "get": {
                "summary": "Documents",
                "description": "The Documents endpoint returns a list of all documents in a repository.\n",
                "tags": [
                    "Documents"
                ],
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/skipParam"
                    },
                    {
                        "$ref": "#/parameters/limitParam"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of documents",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Document"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/documents/{docType}": {
            "get": {
                "description": "This endpoint returns a list of documents filtered by document type\n",
                "tags": [
                    "Documents"
                ],
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/docTypeParam"
                    },
                    {
                        "$ref": "#/parameters/skipParam"
                    },
                    {
                        "$ref": "#/parameters/limitParam"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of documents",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Document"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/documents/{docType}/findByDate": {
            "get": {
                "description": "This endpoint returns a list of documents filtered by document type and related to the given date\n",
                "tags": [
                    "Documents"
                ],
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/docTypeParam"
                    },
                    {
                        "$ref": "#/parameters/skipParam"
                    },
                    {
                        "$ref": "#/parameters/limitParam"
                    },
                    {
                        "name": "date",
                        "in": "query",
                        "description": "the date to search for",
                        "type": "string",
                        "format": "date"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of documents",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Document"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/documents/{docType}/facets/{facet}": {
            "get": {
                "summary": "Facets",
                "description": "The Facets endpoint returns a list of all facets for a collection.\n",
                "tags": [
                    "Facets"
                ],
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/docTypeParam"
                    },
                    {
                        "name": "facet",
                        "in": "query",
                        "description": "The document type",
                        "type": "string",
                        "required": true
                    },
                    {
                        "$ref": "#/parameters/skipParam"
                    },
                    {
                        "$ref": "#/parameters/limitParam"
                    },
                    {
                        "$ref": "#/parameters/fromDateParam"
                    },
                    {
                        "$ref": "#/parameters/toDateParam"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of documents",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Document"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/ant/currentSvnRev": {
            "get": {
                "summary": "Current Subversion revision",
                "description": "Retrieves the current Subversion revision of the data in the eXist-db.\nThis is only available in the development version.\n",
                "tags": [
                    "Ant"
                ],
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "An array of documents",
                        "schema": {"type": "integer"}
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/ant/deleteResources": {
            "post": {
                "summary": "Delete resources",
                "description": "Delete database resources by posting a list of database URIs",
                "tags": [
                    "Ant"
                ],
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "responses": {
                    "404": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/ant/patchSvnHistory": {
            "post": {
                "summary": "Update the Subversion history",
                "description": "Update the Subversion history by posting an XML or JSON file",
                "tags": [
                    "Ant"
                ],
                "consumes": [
                    "application/json",
                    "application/xml"
                ],
                "produces": [
                    "application/xml",
                    "application/json"
                ],
                "parameters": [{
                    "in": "body",
                    "name": "data",
                    "description": "subversion history patches",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "xml": {
                            "name": "patches"
                        },
                        "properties": {
                            "head": {
                                "type": "integer"
                            },
                            "items": {
                                "type": "array",
                                "items": {"$ref": "#/definitions/svnHistoryPatch"}
                            }
                        }
                    }
                }],
                "responses": {
                    "404": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Document": {
            "type": "object",
            "properties": {
                "uri": {
                    "type": "string",
                    "description": "Unique identifier representing a specific document"
                },
                "title": {
                    "type": "string",
                    "description": "The title of the document"
                }
            }
        },
        "Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                },
                "fields": {
                    "type": "string"
                }
            }
        },
        "svnHistoryPatch": {
            "type": "object",
            "xml": {
                "name": "patch"
            },
            "properties": {
                "uri": {
                    "type": "string",
                    "description": "Unique identifier representing a specific document"
                },
                "author": {
                    "type": "string",
                    "description": "The Subversion commit author"
                },
                "rev": {
                    "type": "integer",
                    "description": "The Subversion commit revision"
                },
                "dateTime": {
                    "type": "string",
                    "description": "The Subversion commit dateTime"
                },
                "path": {
                    "type": "string",
                    "description": "The Subversion path, starting from the repository root"
                }
            }
        }
    },
    "parameters": {
        "skipParam": {
            "name": "skip",
            "in": "query",
            "description": "number of items to skip",
            "type": "integer",
            "format": "int32"
        },
        "limitParam": {
            "name": "limit",
            "in": "query",
            "description": "max records to return",
            "type": "integer",
            "format": "int32"
        },
        "fromDateParam": {
            "name": "fromDate",
            "in": "query",
            "description": "the minimum date",
            "type": "string",
            "format": "date"
        },
        "toDateParam": {
            "name": "toDate",
            "in": "query",
            "description": "the maximum date",
            "type": "string",
            "format": "date"
        },
        "docTypeParam": {
            "name": "docType",
            "in": "path",
            "description": "The document type",
            "type": "array",
                "items": {
                    "type": "string",
                    "enum": [
                        "biblio",
                        "diaries",
                        "documents",
                        "letters",
                        "news",
                        "persons",
                        "thematicCommentaries",
                        "works",
                        "writings"
                    ],
                    "default": "letters"
                },
            "required": true
        }
    }
}
