{
    "swagger": "2.0",
    "info": {
        "title": "WeGA API",
        "description": "The API documentation for the Carl-Maria-von-Weber-Gesamtausgabe",
        "version": "1.0.0"
    },
    "host": "localhost:8080",
    "schemes": [
        "http"
    ],
    "tags": [
        {
            "name": "Documents",
            "description": "Access to the documents of the WeGA digital edition"
        },
        {
            "name": "Correspondence",
            "description": "Access to correspondence related information from the WeGA digital edition"
        },
        {
            "name": "Code Samples",
            "description": "Access to encoding features"
        }
    ],
    "basePath": "/exist/apps/WeGA-WebApp/api/v1",
    "paths": {
        "/documents": {
            "get": {
                "summary": "Lists all documents",
                "description": "The Documents endpoint returns a list of all documents from the WeGA digital edition.\n",
                "tags": [
                    "Documents"
                ],
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/docTypeParam",
                        "in": "query",
                        "required": false
                    },
                    {
                        "$ref": "#/parameters/skipParam"
                    },
                    {
                        "$ref": "#/parameters/limitParam"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of documents",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Document"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/documents/{docID}": {
            "get": {
                "summary": "Returns a single document",
                "description": "This endpoint returns a document, indicated by an ID.\n Accepted ID formats are WeGA, e.g. A002068 or http://weber-gesamtausgabe.de/A002068, VIAF, e.g. http://viaf.org/viaf/310642461, or  GND, e.g. http://d-nb.info/gnd/118629662\n",
                "tags": [
                    "Documents"
                ],
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "parameters": [
                    {
                        "name": "docID",
                        "in": "path",
                        "description": "The document identifier to search for",
                        "type": "string",
                        "required": true,
                        "example": "A002068"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of documents",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Document"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/documents/findByDate": {
            "get": {
                "summary": "Finds documents by date",
                "description": "This endpoint returns a list of documents related to the given date – optionally filtered by document type. \n",
                "tags": [
                    "Documents"
                ],
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "parameters": [
                    {
                        "$ref": "#/parameters/docTypeParam",
                        "in": "query",
                        "required": false
                    },
                    {
                        "$ref": "#/parameters/skipParam"
                    },
                    {
                        "$ref": "#/parameters/limitParam"
                    },
                    {
                        "name": "date",
                        "in": "query",
                        "description": "The date to search for",
                        "type": "string",
                        "format": "date"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of documents",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Document"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/documents/findByMention/{docID}": {
            "get": {
                "summary": "Finds documents by reference",
                "description": "This endpoint returns a list of documents that reference a particular docID – optionally filtered by document type. \n",
                "tags": [
                    "Documents"
                ],
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "parameters": [
                    {
                        "name": "docID",
                        "in": "path",
                        "description": "The document ID that is to be mentioned",
                        "type": "string",
                        "required": true
                    },
                    {
                        "$ref": "#/parameters/docTypeParam",
                        "in": "query",
                        "required": false
                    },
                    {
                        "$ref": "#/parameters/skipParam"
                    },
                    {
                        "$ref": "#/parameters/limitParam"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of documents",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Document"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/documents/findByAuthor/{authorID}": {
            "get": {
                "summary": "Finds documents by author",
                "description": "This endpoint returns a list of documents by a given author – optionally filtered by document type \n",
                "tags": [
                    "Documents"
                ],
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "parameters": [
                    {
                        "name": "authorID",
                        "in": "path",
                        "description": "The author to search for",
                        "type": "string",
                        "required": true
                    },
                    {
                        "$ref": "#/parameters/docTypeParam",
                        "in": "query"
                    },
                    {
                        "$ref": "#/parameters/skipParam"
                    },
                    {
                        "$ref": "#/parameters/limitParam"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of documents",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Document"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/code/findByElement/{element}": {
            "get": {
                "summary": "Finds code samples by XML element",
                "description": "",
                "tags": [
                    "Code Samples"
                ],
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "parameters": [
                    {
                        "name": "element",
                        "in": "path",
                        "description": "The XML element to search for",
                        "type": "string",
                        "required": true
                    },
                    {
                        "name": "namespace",
                        "in": "query",
                        "description": "The element namespace. Defaults to the TEI namespace",
                        "type": "string",
                        "required": false,
                        "default": "http://www.tei-c.org/ns/1.0"
                    },
                    {
                        "$ref": "#/parameters/docTypeParam",
                        "in": "query"
                    },
                    {
                        "$ref": "#/parameters/skipParam"
                    },
                    {
                        "$ref": "#/parameters/limitParam"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "An array of documents",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/CodeSample"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Document": {
            "type": "object",
            "properties": {
                "uri": {
                    "type": "string",
                    "description": "Unique identifier representing a specific document"
                },
                "docID": {
                    "type": "string",
                    "description": "The WeGA document identifier representing a specific document"
                },
                "docType": {
                    "type": "string",
                    "description": "The WeGA document type"
                },
                "title": {
                    "type": "string",
                    "description": "The title of the document"
                },
                "supportedFormats" : {
                    "type": "array",
                    "collectionFormat": "csv",
                    "items" : {
                        "type": "string"
                    }
                }
            }
        },
        "CodeSample": {
            "type": "object",
            "properties": {
                "uri": {
                    "type": "string",
                    "description": "Unique identifier representing a specific document"
                },
                "docID": {
                    "type": "string",
                    "description": "The WeGA document identifier representing a specific document"
                },
                "code": {
                    "type": "string",
                    "description": "The code snippet"
                }
            }
        },
        "Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                },
                "fields": {
                    "type": "string"
                }
            }
        },
        "svnHistoryPatch": {
            "type": "object",
            "xml": {
                "name": "patch"
            },
            "properties": {
                "uri": {
                    "type": "string",
                    "description": "Unique identifier representing a specific document"
                },
                "author": {
                    "type": "string",
                    "description": "The Subversion commit author"
                },
                "rev": {
                    "type": "integer",
                    "description": "The Subversion commit revision"
                },
                "dateTime": {
                    "type": "string",
                    "description": "The Subversion commit dateTime"
                },
                "path": {
                    "type": "string",
                    "description": "The Subversion path, starting from the repository root"
                }
            }
        }
    },
    "parameters": {
        "skipParam": {
            "name": "skip",
            "in": "query",
            "description": "Number of items to skip",
            "type": "integer",
            "format": "int32",
            "default": 1
        },
        "limitParam": {
            "name": "limit",
            "in": "query",
            "description": "Max records to return",
            "type": "integer",
            "format": "int32",
            "default": 10
        },
        "fromDateParam": {
            "name": "fromDate",
            "in": "query",
            "description": "The earliest date",
            "type": "string",
            "format": "date",
            "example": "1817-01-01"
        },
        "toDateParam": {
            "name": "toDate",
            "in": "query",
            "description": "The latest date",
            "type": "string",
            "format": "date",
            "example": "1817-12-31"
        },
        "docTypeParam": {
            "name": "docType",
            "description": "The WeGA document type",
            "type": "array",
            "collectionFormat": "csv",
            "items": {
                "type": "string",
                "enum": [
                    "biblio",
                    "diaries",
                    "documents",
                    "letters",
                    "news",
                    "persons",
                    "thematicCommentaries",
                    "works",
                    "writings"
                ],
                "example": "letters"
            }
        }
    }
}
